{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "GCC Build Diff",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/diff",
				"-Wextra",
				"-Wall",
				"-ansi",
				"-pedantic",
				"--std=c99"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}